{
  "expo": {
    "name": "sizzles",
    "slug": "sizzles",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/app_icons/Light.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/app_icons/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      // to help use api routes change from static to server
      "output": "server",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      // plus this too
      ["expo-router", { "origin":"https://sizzles.com/" }],
      [
        "expo-splash-screen",
        {
          "image": "./assets/app_icons/splash-icon-light.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
